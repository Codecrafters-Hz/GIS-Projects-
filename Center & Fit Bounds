    (miny + maxy) / 2,  # latitude
    (minx + maxx) / 2   # longitude
]

# Fit bounds for Folium (southWest, northEast)
fit_bounds = [
    [miny, minx],  # bottom-left (lat, lon)
    [maxy, maxx]   # top-right (lat, lon)
]


